@model Objetivo

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-6">
        <h1>Cadastro</h1>
        @{
            if (TempData["msg"] != null)
            {
                <div class="alert alert-success">
                    @TempData["msg"]
                </div>
            }
        }
        <form asp-action="cadastrar">
            <div class="mb-3">
                <label asp-for="Titulo"></label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Descricao"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <button class="btn btn-primary">Cadastrar</button>
        </form>
    </div>
    <div class="col-6">
        <h1>Objetivos</h1>
        <table class="table">
            <tr>
                <th>Titulo</th>
                <th>Descrição</th>
            </tr>
            @foreach (var item in ViewBag.objetivos)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Descricao</td>
                </tr>
            }
        </table>
        
    </div>
</div>